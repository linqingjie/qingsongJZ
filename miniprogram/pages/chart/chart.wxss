@import "./chart.skeleton.wxss";
.chart-nav{
  height: 60rpx;
  background-color: #6e62e2;
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.select-date{
  width: calc(100% - 240rpx);
  height: 60rpx;
  background-color: #fff;
  border-radius: 30rpx;
  padding: 0 30rpx;
  margin-right: 20rpx;
  line-height: 60rpx;
  color: #444;
  font-size: 28rpx;
}

.date-type{
  width: 160rpx;
  height: 60rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #444;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx;
}

.type-nav{
  display: flex;
  align-items: center;
  height: 100rpx;
  background-color: #fff;
}

.type-nav-item{
  flex: 1;
  display: flex;
}

.type-nav-title{
  margin: 0 auto;
  font-size: 28rpx;
  text-align: center;
  font-weight: bold;
  color: #666;
}


.sr{
  color: #D13B2E;
 
}

.zc{
  color: #249D62;
}

.pie-box{
  margin-top: 20rpx;
  height: 750rpx;
  background-color: #fff;
 padding: 0 20rpx;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.type-data{
  margin-top: 20rpx;
}
.active-sr{
  color: #249D62;
  border: 4rpx solid #249D62;
  padding: 4rpx 20rpx;
  border-radius: 10rpx;
}

.active-zc{
  color: #D13B2E;
  border: 4rpx solid #D13B2E;
  padding: 4rpx 20rpx;
  border-radius: 10rpx;
}